# Root-Ordner für alle Projekte
LIB_INPUT_ROOT="input"

# Root-Ordner für Build-Artefakte
LIB_BUILD_ROOT="build"

# Dateinamen innerhalb jedes Projektordners
LIB_OVERVIEW_FILENAME="overview.md"
LIB_TEMPLATE_FILENAME="overview_template.tex"

# Suffix für das Ausgabe-PDF pro Projekt
LIB_OUTPUT_SUFFIX="_LibraryVision"

# Präfix für den Dokumenttitel (pro Projekt wird der Projektname angehängt)
LIB_TITLE_PREFIX="LibraryVision – "

# Name des C-PDFs (wenn --LV verwendet wird)
LIB_LV_OUTPUT="LibraryVision_AllProjects"

# Sollen Zwischenartefakte (MD/TEX/CSV) pro Projekt im Build-Ordner bleiben?
# "true"  = behalten
# "false" = nach erfolgreichem Build löschen
LIB_KEEP_INTERMEDIATE="true"

